<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>Product Filters</title>
		<!-- MDB Bootstrap CSS -->
		<link
			href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.css"
			rel="stylesheet" />
		<link
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
			rel="stylesheet" />
		<style>
			.filter-bar {
				background-color: #f8f9fa;
				padding: 15px;
				border-bottom: 1px solid #dee2e6;
			}
			.filter-item {
				margin-right: 20px;
				display: flex;
				align-items: center;
			}
			.filter-item i {
				margin-right: 8px;
				color: #555;
			}
			/* Responsive: stack filters on smaller screens */
			@media (max-width: 768px) {
				.filter-bar {
					flex-direction: column;
					align-items: flex-start;
				}
				.filter-item {
					margin-bottom: 10px;
				}
			}
		</style>
	</head>
	<body>
		<div class="filter-bar d-flex flex-wrap align-items-center">
			<div class="filter-item">
				<i class="fas fa-tags"></i>
				<select
					class="form-select"
					name="category"
					aria-label="Category Filter">
					<option selected disabled>Category</option>
					<option value="electronics">Electronics</option>
					<option value="apparel">Apparel</option>
					<option value="books">Books</option>
					<option value="home-garden">Home & Garden</option>
				</select>
			</div>
			<!-- Price Range Filter -->
			<div class="filter-item">
				<i class="fas fa-dollar-sign"></i>
				<select class="form-select" name="price" aria-label="Price Filter">
					<option selected disabled>Price Range</option>
					<option value="under-50">Under $50</option>
					<option value="50-100">$50 - $100</option>
					<option value="100-500">$100 - $500</option>
					<option value="above-500">Above $500</option>
				</select>
			</div>
			<!-- Rating Filter -->
			<div class="filter-item">
				<i class="fas fa-star"></i>
				<select class="form-select" name="rating" aria-label="Rating Filter">
					<option selected disabled>Rating</option>
					<option value="1">1 Star & Up</option>
					<option value="2">2 Stars & Up</option>
					<option value="3">3 Stars & Up</option>
					<option value="4">4 Stars & Up</option>
					<option value="5">5 Stars</option>
				</select>
			</div>
			<!-- Sort Filter -->
			<div class="filter-item">
				<i class="fas fa-sort"></i>
				<select class="form-select" name="sort" aria-label="Sort By Filter">
					<option selected disabled>Sort By</option>
					<option value="newest">Newest</option>
					<option value="low-high">Price: Low to High</option>
					<option value="high-low">Price: High to Low</option>
					<option value="bestselling">Best Selling</option>
				</select>
			</div>
			<!-- Apply Filters Button -->
			<div class="filter-item">
				<button type="submit" class="btn btn-primary">
					<i class="fas fa-filter"></i> Apply Filters
				</button>
			</div>
		</div>

		<!-- MDB Bootstrap JS -->
		<script
			type="text/javascript"
			src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.0.0/mdb.min.js"></script>
	</body>
</html>
