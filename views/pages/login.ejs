<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title><%= pageTitle %></title>
		<link
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
			rel="stylesheet" />
		<!-- Google Fonts -->
		<link
			href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
			rel="stylesheet" />
		<!-- MDB -->
		<link
			href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/8.1.0/mdb.min.css"
			rel="stylesheet" />
		<style>
			.bg-image-vertical {
				position: relative;
				overflow: hidden;
				background-repeat: no-repeat;
				background-position: right center;
				background-size: auto 100%;
			}

			@media (min-width: 1025px) {
				.h-custom-2 {
					height: 100%;
				}
			}
			/* Optional: Reset default button styling */
			.google-btn {
				display: inline-flex;
				align-items: center;
				justify-content: center;
				padding: 6px 20px;
				background-color: #f1f1f1;
				border: 1px solid #dfdfdf;
				border-radius: 4px;
				color: #333333;
				font-weight: bold;
				cursor: pointer;
				transition: background-color 0.3s ease;
			}

			.google-btn img {
				width: 30px;
				margin-right: 10px;
			}

			.google-btn:hover {
				background-color: #f1f1f1;
			}
		</style>
	</head>
	<body class="overflow-hidden">
		<div id="fb-root"></div>
		<script
			async
			defer
			crossorigin="anonymous"
			src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v22.0"></script>
		<section class="vh-100">
			<div class="container-fluid">
				<% if (errorMessage) { %>
				<div
					class="toast-container position-fixed top-0 end-0 p-3"
					style="z-index: 1055">
					<div
						id="errorToast"
						class="toast align-items-center text-white bg-danger border-0"
						role="alert"
						aria-live="assertive"
						aria-atomic="true">
						<div class="d-flex">
							<div class="toast-body"><%= errorMessage %></div>
							<button
								type="button"
								class="btn-close btn-close-white me-2 m-auto"
								data-mdb-dismiss="toast"
								aria-label="Close"></button>
						</div>
					</div>
				</div>
				<% } %>

				<div class="row">
					<div class="col-sm-6 text-black">
						<div class="px-5 ms-xl-4">
							<i
								class="fas fa-crow fa-2x me-1 text-primary pt-5 mt-xl-4"
								style="color: #709085"></i>
							<span class="h1 fw-bold text-primary mb-0">OXIANA</span>
						</div>

						<div
							class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
							<form style="width: 23rem" action="/auth/login" method="POST">
								<h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px">
									Log in
								</h3>

								<div data-mdb-input-init class="form-outline mb-4">
									<input
										type="email"
										id="email"
										name="email"
										class="form-control form-control-lg" />
									<label class="form-label" for="email">Email address</label>
								</div>

								<div class="form-outline mb-4" data-mdb-input-init>
									<i
										class="far fa-eye trailing fa-fw pe-auto"
										id="show-password-toggle-icon"></i>
									<input
										type="password"
										name="password"
										id="password"
										class="form-control form-control-lg form-icon-trailing" />
									<label class="form-label" for="password">Password</label>
								</div>

								<div class="pt-1 mb-4">
									<input
										type="submit"
										id="login-btn"
										class="btn btn-primary btn-lg btn-block"
										value="Login" />
								</div>

								<p class="small mb-2 pb-lg-2">
									<a class="text-primary" href="/auth/forgot-password"
										>Forgot password?</a
									>
								</p>
								<hr />
								<span>Or:</span>
								<div class="d-flex gap-2 flex-column py-3">
									<button class="google-btn btn" type="button">
										<img
											src="/images/google/google-logo.png"
											alt="Google Logo" />
										<span>Continue with Google</span>
									</button>
									<div
										class="fb-login-button"
										data-width="380"
										data-size="large"
										data-button-type=""
										data-layout=""
										data-auto-logout-link="false"
										data-use-continue-as="false"></div>
								</div>
								<p>
									Don't have an account?
									<a href="/auth/signup" class="link-primary">Register here</a>
								</p>
							</form>
						</div>
					</div>
					<div class="col-sm-6 px-0 d-none d-sm-block">
						<img
							src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img3.webp"
							alt="Login image"
							class="w-100 vh-100"
							style="object-fit: cover; object-position: left" />
					</div>
				</div>
			</div>
		</section>
		<!-- MDB UI Kit JS -->
		<script
			type="text/javascript"
			src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/8.1.0/mdb.umd.min.js"></script>
		<script>
			// Icon Example
			const passwordInput1 = document.getElementById("password");
			const toggleIcon = document.getElementById("show-password-toggle-icon");

			toggleIcon.addEventListener("pointerdown", (e) => {
				e.preventDefault();

				// Toggle input type between password and text
				if (passwordInput1.type === "password") {
					passwordInput1.type = "text";
					toggleIcon.classList.remove("fa-eye");
					toggleIcon.classList.add("fa-eye-slash");
				} else {
					passwordInput1.type = "password";
					toggleIcon.classList.remove("fa-eye-slash");
					toggleIcon.classList.add("fa-eye");
				}
			});

			// Checkbox example
			const passwordInput2 = document.getElementById("show-password-input-2");
			const toggleCheckbox = document.getElementById(
				"show-password-toggle-checkbox"
			);

			toggleCheckbox.addEventListener("change", () => {
				passwordInput2.type = toggleCheckbox.checked ? "text" : "password";
			});
		</script>

		<% if (errorMessage) { %>
		<script>
			document.addEventListener("DOMContentLoaded", function () {
				var toastEl = document.getElementById("errorToast");
				var toastInstance = new mdb.Toast(toastEl);
				toastInstance.show();
			});
		</script>
		<% } %>
	</body>
</html>
