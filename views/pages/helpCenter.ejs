<%- include('../partials/header', { pageTitle: 'OXIANA Help Center', user:
user}) %>
<main class="container my-5">
	<div class="row">
		<!-- Navigation Sidebar -->
		<div class="col-md-3 mb-4">
			<nav class="nav flex-column nav-pills">
				<a class="nav-link active" href="#section-0"
					><i class="fas fa-play me-2"></i>Getting Started</a
				>
				<a class="nav-link" href="#section-1"
					><i class="fas fa-user-cog me-2"></i>Account Management</a
				>
				<a class="nav-link" href="#section-2"
					><i class="fas fa-shipping-fast me-2"></i>Orders & Shipping</a
				>
				<a class="nav-link" href="#section-3"
					><i class="fas fa-undo me-2"></i>Returns & Refunds</a
				>
				<a class="nav-link" href="#section-4"
					><i class="fas fa-tools me-2"></i>Troubleshooting</a
				>
				<a class="nav-link" href="#section-5"
					><i class="fas fa-question-circle me-2"></i>FAQs</a
				>
			</nav>
		</div>
		<!-- Help Center Content -->
		<div class="col-md-9">
			<% for (let i = 0; i < sections.length; i++){ %>
			<section id="section-<%= i %>" class="mb-5">
				<h3 class="mb-4"><%= sections[i].title %></h3>
				<%= responses[i].data %>
			</section>
			<% } %>
		</div>
	</div>
</main>
<%- include('../partials/footer') %>
