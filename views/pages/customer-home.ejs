<%- include('../partials/header', { pageTitle: 'Home', user: user}) %>
<main>
	<!-- Carousel -->

	<!-- Categories -->
	<section class="my-5 px-3 px-lg-5">
		<h2>Categories</h2>
		<%- include('../partials/categories', { categories: categories }) %>
	</section>

	<!-- Featured Products -->
	<section id="products" class="my-5 px-4 px-lg-5">
		<h2>Featured Products</h2>
		<div class="row my-5">
			<% products.forEach(product => { %>
			<div class="col-lg-3 px-lg-3 py-2">
				<%- include('../partials/product-card', { product: product }) %>
			</div>
			<% }); %>
		</div>
	</section>
</main>
<%- include('../partials/footer') %>
